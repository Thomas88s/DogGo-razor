@model DogGo.Models.ViewModels.WalkerViewModel

@{ ViewData["Title"] = "Profile"; }
<div>

    <h1 class="text-left">Walker Profile</h1>


    <section class="container">
        
            <div>
                <img style="width:100px;float:left;margin-right:20px"
                     src="@Model.Walker.ImageUrl" />
            </div>
        
            <div>
                <label class="font-weight-bold">Name:</label>
                <span>@Model.Walker.Name</span>
            </div>
            <div>
                <label class="font-weight-bold">Neighborhood:</label>
                <span>@Model.Walker.NeighborhoodName</span>
            </div>

    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container mt-5">
            <h1 class="text-left">Recent Walks</h1>

            <div class="row">
                @foreach (Walk walk in Model.Walks)
                {
                    <div class="card m-4" style="width: 18rem;">

                        <div class="card-body">
                            <div>
                                <label class="font-weight-bold">Date:</label>
                                <span>@walk.Date</span>
                            </div>
                            <div>
                                <label class="font-weight-bold">Client:</label>
                                <span>@walk.DogName</span>
                            </div>
                            <div>
                                <label class="font-weight-bold">Duration:</label>
                                <p>@walk.LengthOfWalk Minutes</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

        <section class="col-lg-4 col-md-8 container mt-5">


            <ul class="list-group mt-4">
                @foreach (Walk walk in Model.Walks)
                {
                    <li class="list-group-item disabled" aria-disabled="true">

                        <span class="font-weight-bold ml-4">Total Walk Time: @walk.LengthOfWalk Minutes </span>
                    </li>
                }
            </ul>
        </section>
    </div>
</div>
